<p style="color: green"><%= notice %></p>

<h1>Ideas</h1>

<div id="ideas">
  <% @ideas.in_groups_of(3, false) do |idea_group| %>
    <div class="row">
      <% idea_group.each do |idea| %>
        <div class="col-md-4 my-3">
          <%= link_to idea do %>
            <%= image_tag(idea.picture_url(:thumb), width: '100%') if idea.picture.present? %>
          <% end %>
          <p>
            <%= link_to "Show this idea", idea %>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>